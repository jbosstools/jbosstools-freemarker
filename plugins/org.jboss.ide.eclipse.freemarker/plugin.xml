<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.jboss.ide.eclipse.freemarker.editor.FreemarkerMultiPageEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            extensions="ftl"
            icon="$nl$/icons/icon.gif"
            id="org.jboss.ide.eclipse.freemarker.editor.FreemarkerEditor"
            name="Freemarker Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jboss.ide.eclipse.freemarker.preferences.PreferencePage"
            id="org.jboss.ide.eclipse.freemarker.preferences.OutlinePreferencePage"
            name="%PreferencePage_FreeMarkerEditor"/>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.jboss.ide.eclipse.freemarker.objectContribution1"
            nameFilter="*"
            objectClass="org.eclipse.jdt.internal.core.JarEntryFile">
         <action
               class="org.jboss.ide.eclipse.freemarker.editor.actions.AddMacroLibrary"
               icon="$nl$/icons/include.png"
               id="org.jboss.ide.eclipse.freemarker.AddMacroLibrary1"
               label="Use as FreeMarker library"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.jboss.ide.eclipse.freemarker.objectContribution2"
            nameFilter="*.ftl"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.jboss.ide.eclipse.freemarker.editor.actions.AddMacroLibrary"
               icon="$nl$/icons/include.png"
               id="Freemarker-IDE.AddMacroLibrary2"
               label="Use as FreeMarker library"/>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            class="org.jboss.ide.eclipse.freemarker.preferences.ContextProperties"
            id="org.jboss.ide.eclipse.freemarker.contextPage"
            name="%PropertyPage_FreeMarkerContext"
            objectClass="org.eclipse.core.resources.IResource"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.consoleLineTrackers">
      <consoleLineTracker
            class="org.jboss.ide.eclipse.freemarker.linetracker.ConsoleLineTracker"
            id="org.jboss.ide.eclipse.freemarker.linetracker.ConsoleLineTracker"
            processType="java"/>
   </extension>
</plugin>
